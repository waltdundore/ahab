# ==============================================================================
# Ahab Configuration - Shared Configuration Variables
# ==============================================================================
# This file contains configuration variables shared across projects
# Used by: ahab/Makefile, ahab-gui/Makefile, waltdundore.github.io/Makefile
# ==============================================================================

# Project paths (relative to including Makefile)
AHAB_ROOT := $(shell cd $(dir $(lastword $(MAKEFILE_LIST))) && pwd)
PROJECT_ROOT := $(shell cd $(AHAB_ROOT)/.. && pwd)
AHAB_GUI_PATH := $(PROJECT_ROOT)/ahab-gui
WEBSITE_PATH := $(PROJECT_ROOT)/waltdundore.github.io

# Docker configuration
DOCKER_PYTHON_IMAGE := python:3.11-slim
DOCKER_NETWORK := bridge

# Development configuration
DEV_PORT_GUI := 5001
DEV_PORT_WEBSITE := 8000
DEV_HOST := 0.0.0.0

# Test configuration
TEST_TIMEOUT := 300
TEST_RETRIES := 3

# Security configuration
SECRET_KEY_LENGTH := 32
VAULT_PASSWORD_LENGTH := 32

# OS configuration (from ahab.conf)
FEDORA_VERSION := 43
DEBIAN_VERSION := 13
UBUNTU_VERSION := 24.04

# Build configuration
BUILD_PARALLEL := true
BUILD_VERBOSE := false

# Deployment configuration
DEPLOY_BRANCH := main
DEPLOY_REMOTE := origin

# Logging configuration
LOG_LEVEL := INFO
LOG_FORMAT := "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Performance configuration
MAX_MEMORY := 512m
MAX_CPU := 1.0
MAX_PIDS := 100

# File patterns
PYTHON_FILES := **/*.py
SHELL_FILES := **/*.sh
YAML_FILES := **/*.yml **/*.yaml
HTML_FILES := **/*.html
CSS_FILES := **/*.css
JS_FILES := **/*.js

# Exclusion patterns
EXCLUDE_DIRS := __pycache__ .git .pytest_cache node_modules .vagrant
EXCLUDE_FILES := *.pyc *.tmp *.log *.backup

# Quality gates
MIN_TEST_COVERAGE := 80
MAX_FUNCTION_LENGTH := 60
MAX_FILE_LENGTH := 1000

# Progressive disclosure configuration
MAX_MENU_ITEMS := 7
MAX_BREADCRUMB_LEVELS := 4
MAX_ACTIONS_PER_PAGE := 5